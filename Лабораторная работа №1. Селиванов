d = {'0': 'ноль', '1': 'один', '2': 'два', '3': 'три', '4': 'четыре',
     '5': 'пять', '6': 'шесть', '7': 'семь', '8': 'восемь', '9': 'девять'}

c = input("Цифра для поиска: ")
text = "2201 2213 225 2267 22123 22999 abc 22003"

lex = ''
for char in text + ' ':
    if char.isdigit():
        lex += char
    elif lex:
        if lex.startswith('22') and int(lex) % 2:
            print(f"{lex}-{d.get(c, 'ноль')}-{lex.count(c)}")
        lex = ''
